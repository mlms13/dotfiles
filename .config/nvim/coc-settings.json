{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "js",
    "json",
    "purescript",
    "typescript",
    "typescriptreact",
  ],
  "languageserver": {
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "purescript"
      ],
      "rootPatterns": [
        "spago.dhall"
      ]
    }
  }
}
